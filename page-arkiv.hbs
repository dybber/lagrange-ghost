{{!< default}}

<main class="content" role="main">

{{#post}}
    <header class="post-header">
        <h1 class="post-title">{{title}}</h1>
    </header>
    <section class="post-content">
        {{content}}

    <h3>2019</h3>
    <ul class="posts">
    {{#get "posts" limit="all" filter="published_at:>'2019-01-01'+published_at:<'2020-01-01'"}}
    {{#foreach posts}}

    <li>
      <a href="{{url}}">{{title}}</a>
      <span class="post-metadata">
       <span class="fa fa-calendar" role="img" aria-hidden="true"></span>
          <time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">...</time>
          - <span class="fa fa-clock-o" role="img" aria-hidden="true"></span>
            {{reading_time minute=(t "1 minuts læsning") minutes=(t "% minutters læsning")}}
       </span>
    </li>
    {{/foreach}}
    {{/get}}
    </ul>


    <h3>2018</h3>
    <ul class="posts">
    {{#get "posts" limit="all" filter="published_at:>'2018-01-01'+published_at:<'2019-01-01'"}}
    {{#foreach posts}}

    <li>
      <a href="{{url}}">{{title}}</a>
      <span class="post-metadata">
       <span class="fa fa-calendar" role="img" aria-hidden="true"></span>
          <time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">...</time>
          - <span class="fa fa-clock-o" role="img" aria-hidden="true"></span>
            {{reading_time minute=(t "1 minuts læsning") minutes=(t "% minutters læsning")}}
       </span>
    </li>
    {{/foreach}}
    {{/get}}
    </ul>
    </section>
{{/post}}

</main>
