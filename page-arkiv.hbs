{{!< default}}

<main class="content" role="main">

{{#post}}
    <header class="post-header">
        <h1 class="post-title">{{title}}</h1>
    </header>
    <section class="post-content">
        {{#get "posts" limit="all" include="authors"}}
        {{#foreach posts}}
            <p>
                <a href="{{url}}">{{title}} </a>
                <span class="post-metadata">{{> "post-metadata"}}</span>
            </p>
        {{/foreach}}
    {{/get}}

    </section>
{{/post}}

</main>
