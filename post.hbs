{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
          <h1 class="post-title">{{{title}}}</h1>
        </header>

        {{#if feature_image}}
        <figure class="post-full-image">
          <a href="{{url}}"><img src="{{img_url feature_image}}" alt="{{title}}"/></a>
         </figure>
        {{/if}}
        
        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">
          <p>
            <span class="fa fa-calendar" role="img" aria-hidden="true"></span>
          <time class="post-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}">...</time>
          - <span class="fa fa-clock-o" role="img" aria-hidden="true"></span>
          {{reading_time minute=(t "1 minuts læsning") minutes=(t "% minutters læsning")}}
          <!-- {{#if tags}} - Tags: {{tags}}{{/if}} -->
          </p>
          
            {{#if primary_author}}
            <section class="author">
                <div class="authorimage" style="background: url({{primary_author.profile_image}})"></div>
                <p class="attr">Author</p>
                <h4><a href="{{primary_author.website}}">{{primary_author.name}}</a></h4>
                <p class="bio">{{primary_author.bio}}</p>
            </section>
            {{/if}}

        </footer>

        {{/post}}

        {{> comments-disqus}}

    </article>

</main>
