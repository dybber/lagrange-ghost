{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <header>
          <h1 class="post-title">{{{title}}}</h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">
          {{> "post-metadata"}}
        </footer>

        {{/post}}

        {{> comments-disqus}}

    </article>

</main>
